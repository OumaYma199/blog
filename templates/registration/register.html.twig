{% extends 'base.html.twig' %}

{% block title %}Inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

     <div class="center">
    <h1>Inscrirvez-vous</h1>

    {{ form_start(registrationForm) }}
        <div class="txt_field">
        {{ form_row(registrationForm.email) }}
        </div>
            <div class="txt_field">

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        </div>

        {{ form_row(registrationForm.Accepter_les_conditions) }}

        <button type="submit" class="btn">Inscrire</button>
            <p class="text-center text-muted mt-5">Vous avez déjà un compte ? <a href="{{ path('app_login')}}">Connectez-vous.</a></p>

    {{ form_end(registrationForm) }}
     </div>

{% endblock %}
